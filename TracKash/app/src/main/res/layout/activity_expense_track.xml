<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#010147"
    tools:context="com.example.studentexpensetracker.ExpenseTrackActivity">

    <TextView
        android:id="@+id/newExpense"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#D0D0D0"
        android:textStyle="bold"
        android:text="@string/new_expense"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:textAlignment="center"
        android:textColor="#000000" />

    <EditText
        android:id="@+id/editTextExpenseValue"
        android:layout_below="@id/newExpense"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="  Expense Value"
        android:background="#FFFFFF"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:inputType="text"
        android:importantForAutofill="no" />

    <EditText
        android:id="@+id/editTextLocationName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextExpenseValue"
        android:layout_marginTop="1dp"
        android:background="#FFFFFF"
        android:hint="  Location Name"
        android:importantForAutofill="no"
        android:inputType="text"
        android:paddingTop="10dp"
        android:paddingBottom="10dp" />

    <Button
        android:id="@+id/buttonAddExpense"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextLocationName"
        android:layout_marginTop="5dp"
        android:background="#6363E6"
        android:text="@string/add"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/expenseSummary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonAddExpense"
        android:layout_marginTop="24dp"
        android:background="#D0D0D0"
        android:textStyle="bold"
        android:text="@string/expense_explanation"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:textAlignment="center"
        android:textColor="#000000" />

    <ListView
        android:id="@+id/listViewExpenses"
        android:layout_width="wrap_content"
        android:layout_height="270dp"
        android:layout_below="@+id/expenseSummary"
        android:background="#FFFFFF"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/totalExpensesView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/listViewExpenses"
        android:background="#D0D0D0"
        android:textStyle="bold"
        android:text="@string/total_expenses"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:textAlignment="center"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/textViewHelpMsg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/totalExpensesView"
        android:layout_marginTop="24dp"
        android:background="#D0D0D0"
        android:textStyle="bold"
        android:text="Tap To Find Out Where You Shop Most"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:textAlignment="center"
        android:textColor="#000000" />

    <Button
        android:id="@+id/buttonCheckSort"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewHelpMsg"
        android:background="#6363E6"
        android:text="Get Additional Information"
        android:textColor="#FFFFFF" />

</RelativeLayout>